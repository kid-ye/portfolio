---
import Layout from "../components/layout.astro";
import IndexIcon from "./icons/index.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title} description={frontmatter.description}>
  <main class="relative">
    <div class="mb-4 md:absolute md:-ml-36 md:mb-0 md:h-full">
      <a
        class="exclude flex w-fit items-center gap-x-1 md:sticky md:top-8"
        href="/writing"
        ><IndexIcon /> Writing
      </a>
    </div>
    <header>
      <div class="space-y-1">
        <h1 class="font-semibold">{frontmatter.title}</h1>
        <p class="text-neutral-500 dark:text-neutral-400">
          {
            new Date(frontmatter.pubDate).toLocaleDateString("en-US", {
              year: "numeric",
              month: "long",
              day: "numeric",
            })
          }
        </p>
      </div>
    </header>
    <article class="prose dark:prose-invert prose-neutral mt-4 max-w-none">
      <slot />
    </article>
  </main>
</Layout>
